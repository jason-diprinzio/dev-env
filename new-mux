#!/bin/bash

defaultsession=default
session=${1:-$defaultsession}

new-window()
{
   tmux new-window
   tmux rename-window shift
   tmux send-keys 'cd shift' 'C-m'
}

sessions=`tmux list-sessions`
if [ 0 -eq $? ]
then
    grep -E "^${session}" <<< $sessions
    if [ $?  -eq 0 ]
    then
        tmux attach -t "${session}"
        exit 0
    fi
fi

echo "starting new sessions named ${session}"

cd ~/src/git.rs.ring.com/
tmux -2 new-session -d -s "${session}"

tmux rename-window 'hub-build'
tmux send-keys 'cd ../vagrant' 'C-m'
tmux send-keys 'vagrant ssh' 'C-m'

tmux new-window
tmux rename-window 'hub-core'
tmux send-keys 'cd hub-core/hub-core' 'C-m'

tmux new-window
tmux rename-window 'plugin-redsky'
tmux send-keys 'cd hub-core/plugin-redsky' 'C-m'

tmux new-window
tmux rename-window 'cell services'
tmux send-keys 'cd go/cell-services' 'C-m'

tmux new-window
tmux rename-window 'sandbox'
tmux send-keys 'cd sandbox' 'C-m'

tmux new-window
tmux rename-window 'omv'
tmux send-keys 'cd ~/.oh-my-vim' 'C-m'

tmux new-window
tmux rename-window 'omz'
tmux send-keys 'cd ~/.oh-my-zsh' 'C-m'

tmux attach -t "${session}"

exit 0
